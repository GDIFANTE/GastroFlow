{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,

    // ================== A CORREÇÃO DEFINITIVA ==================
    // A base para os atalhos agora é a pasta 'src/app',
    // pois é DENTRO dela que estão suas pastas 'components' e 'mocks'.
    "baseUrl": "src/app",
    
    "paths": {
      // Este atalho agora vai funcionar corretamente.
      // Ex: "@/components" será resolvido para "src/app/components".
      "@/*": ["./*"]
    },
    // ==========================================================

    "plugins": [{ "name": "next" }]
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}